{% extends 'base.html.twig' %}

{% block title %}Student {{ student.firstName }}{% endblock %}

{% block body %}
<h2 class="student-name">{{ student.firstName }} {{ student.lastName }}</h2>

<div class="student-container">
    <div class="student-photo">
        <td><img src="{{ vich_uploader_asset(student, 'imageFile') }}" alt="{{ student.imageName }}" class = "pull-left   img-circle img-responsive" width="200" height="200"/>
    </div>
    <div class="student-details">
        <dl class="student-details-list">
            <dt>FirstName:</dt>
            <dd>{{ student.firstName }}</dd>
            <dt>LastName:</dt>
            <dd>{{ student.lastName }}</dd>
            <dt>Email:</dt>
            <dd>{{ student.email}}</dd>
            <dt>Formation:</dt>
            <dd>{{ formation }}</dd>

        </dl>

    </div>
</div>

<img src="{{ qrcode_data_uri( message, { size:75, padding: 10 }) }}" class= "pull-right img-responsive" width="105" style="margin-top: 75px"  />
<a href="{{ path('send-student_info',{'student_id': student.studentId})}}"><input type="submit" class= " btn btn-success btn-lg pull-left img-responsive"  style="margin-top: 75px" value="Send Info" /></a>

{% endblock %}
